<?php

//nombre à convertir
$index = 152.31;
$inch = 2.54;

echo "Pour 1cm = " . $inch . " inch" . "\n" . $index . " cm.";
echo Convertir_en_inch($index) . "inch" . "\n";

function Convertir_en_inch($reel) {
//constantes en paramètres
    $inch = 2.54;
    //oppération
    $res = ($reel / $inch);
    return $res;
}
