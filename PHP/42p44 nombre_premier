function bool_premier ($x) {
    $boolpair = FALSE;
    for ($i = 2, $nbDiviseurs = 0; $i <= $x; $i++) {
        if ($x % $i == 0) {
            $nbDiviseurs++;
        }
    }
    if ($nbDiviseurs == 1) {
        $boolpair = TRUE;
    }
    return $boolpair;
}
echo bool_premier (8)*1;
